<% include ../partials/header%>
<div class="container class-form">
	<h1>
		Create New Class
		
	</h1>
	<form class="class-input" action="/classes" method="POST">
	  <div class="form-group">
		<input type="text" class="form-control" placeholder="Name of Class" name="name">
	  </div>
	<div class="form-group">
		<input type="text" class="form-control" placeholder="Image Url" name="image">
	</div>
	<div class="form-group">
		<textarea class="form-control" placeholder="Description" rows="3" name="description"></textarea>
	 </div>
	<div class="form-group">
		<button class="btn btn-large btn-success">
			Submit
		</button>
	</div>
	</form>
</div>

