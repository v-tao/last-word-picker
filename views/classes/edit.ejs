<% include ../partials/header%>
<div class="container class-form">
	<h1>
		Edit <%=selectedClass.name%>
	</h1>
	<form class="class-input" action="/classes/<%=selectedClass._id%>?_method=PUT" method="POST">
	  <div class="form-group">
		<input type="text" class="form-control" value="<%=selectedClass.name%>" name="selectedClass[name]">
	  </div>
	<div class="form-group">
		<input type="text" class="form-control" value="<%=selectedClass.image%>" name="selectedClass[image]">
	</div>
	<div class="form-group">
		<textarea class="form-control" rows="3" name="selectedClass[description]"><%=selectedClass.description%></textarea>
	 </div>
	<div class="form-group">
		<button class="btn btn-large btn-submit">
			Submit
		</button>
	</div>
	</form>
	<form class = "mb-2" action="/classes/<%=selectedClass._id%>?_method=DELETE" method="POST">
		<button class="btn btn-large btn-danger">
			Delete Class
		</button>
	</form>
	<a href="/classes/<%=selectedClass._id%>">Back</a>
</div>

<% include ../partials/footer%>